	"import debug": {
		 "prefix": "_im debug",
		 "body": "require 'nex-lib/lib-debug.php';",
	},

	"import imports": {
		 "prefix": "_im imports",
		 "body": "require __DIR__ . '/imports.php';",
	},

	"import vendor": {
		"prefix": "_im vendor",
		"body": "require __DIR__ . '/vendor/autoload.php';",
 },

 "new_snippet": {
	 "prefix": "_puts",
